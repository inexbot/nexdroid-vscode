{
  "name": "nexdroid",
  "displayName": "nexdroid",
  "description": "纳博特科技机器人程序编辑",
  "publisher": "inexbot",
  "version": "0.2.2",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.66.0"
  },
  "galleryBanner": {
    "color": "#5c2d91",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/inexbot/nexdroid-vscode.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:nexdroid.parse"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "JBR",
        "icon": {
          "light": "./icon/robot.svg",
          "dark": "./icon/robot.svg"
        },
        "aliases": [
          "NexDroid"
        ],
        "extensions": [
          ".JBR",
          ".JBP"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "JBR",
        "scopeName": "source.nexdroid",
        "path": "./syntaxes/nexdroid.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "JBR",
        "path": "./snippets/nexdroid.json"
      }
    ],
    "commands": [
      {
        "command": "nexdroid.parse",
        "title": "解析文件"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == JBR ",
          "command": "nexdroid.parse",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.0",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/request": "^2.48.8",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "adm-zip": "^0.5.9",
    "fs-extra": "^10.1.0",
    "request": "^2.88.2"
  }
}
