{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "nexdroid",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#nopandend"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#controls"
    },
    {
      "include": "#parameters"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.nexdroid",
          "match": "//[^\n]**"
        }
      ]
    },
    "nopandend": {
      "patterns": [
        {
          "name": "markup.heading.nexdroid",
          "match": "\\b(NOP|END)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "support.function.nexdroid",
          "match": "\\b(MOVJ|MOVL|MOVC|MOVCA|MOVS|IMOV|MOVJEXT|MOVLEXT|MOVCEXT)\\b"
        }
      ]
    },
    "controls": {
      "patterns": [
        {
          "name": "keyword.control.nexdroid",
          "match": "\\b(IF|ELSEIF|ELSE|WHILE|ENDIF|ENDWHILE|JUMP|LABEL|UNTIL|ENDUNTIL|CLKSTART|CLKSTOP|CLKRESET)\\b"
        },
        {
          "name": "keyword.other.nexdroid",
          "match": "\\b(TIMER|WAIT|CALL)\\b"
        }
      ]
    },
    "parameters": {
      "patterns": [
        {
          "name": "meta.parameter.type.variable.nexdroid",
          "match": "(VJ|V|PL)"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "storage.type.nexdroid",
          "match": "^[P,I,B,D,S][0-9][0-9][1-9]"
        },
        {
          "name": "variable.parameter.nexdroid",
          "match": "[G,P][0-9][0-9][1-9]"
        },
        {
          "name": "variable.parameter.nexdroid",
          "match": "[G]?[I,B,D][0-9][0-9][1-9]"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.nexdroid",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.nexdroid",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.nexdroid"
}
