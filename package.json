{
  "name": "qichuang-ide",
  "displayName": "奇创IDE",
  "description": "奇创机器人程序编辑",
  "publisher": "qichuang",
  "version": "0.4.8",
  "icon": "qc.ico",
  "engines": {
    "vscode": "^1.66.0"
  },
  "galleryBanner": {
    "color": "#5c2d91",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "JBR",
        "icon": {
          "light": "./icon/robot.svg",
          "dark": "./icon/robot.svg"
        },
        "aliases": [
          "NexDroid"
        ],
        "extensions": [
          ".JBR",
          ".JBP"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "JBR",
        "scopeName": "source.nexdroid",
        "path": "./syntaxes/nexdroid.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "JBR",
        "path": "./snippets/nexdroid.json"
      }
    ],
    "commands": [
      {
        "command": "nexdroid.newFile",
        "title": "生成文件"
      },
      {
        "command": "nexdroid.parse",
        "title": "解析文件"
      },
      {
        "command": "nexdroid.insertIns",
        "title": "插入指令"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == JBR ",
          "command": "nexdroid.parse",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nexdroid-sidebar",
          "title": "开始！",
          "icon": "./icon/sidebar.png"
        }
      ]
    },
    "views": {
      "nexdroid-sidebar": [
        {
          "id": "nexdroid-instructs",
          "name": "指令插入"
        },
        {
          "id": "nexdroid-commands",
          "name": "功能"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "nexdroid-commands",
        "contents": "[新建作业程序](command:nexdroid.newFile)"
      },
      {
        "view": "nexdroid-instructs",
        "contents": "没有检测到奇创系统的作业程序，请新建或打开一个"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.0",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/request": "^2.48.8",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "adm-zip": "^0.5.9",
    "fs-extra": "^10.1.0",
    "request": "^2.88.2"
  }
}
